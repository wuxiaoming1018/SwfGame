<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dds_mainactivity_bg0"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dds_mainactivity_bg1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/dds_mainactivity_bg1" />
    </LinearLayout>

    <ImageView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:adjustViewBounds="true"
        android:src="@drawable/dds_mainactivity_bg2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/dds_mainactivity_stone_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/left"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/dds_game_activity_bg3" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="-180dp"
        android:layout_marginTop="-10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/dds_game_bg4" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="-70dp"
                android:layout_marginTop="-100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/dds_game_bg5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-50dp"
                android:layout_weight="1"
                android:background="@drawable/dds_game_activity_ground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/game_activity_ground_left_right_margin"
            android:paddingRight="@dimen/game_activity_ground_left_right_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center_horizontal">

                <include
                    layout="@layout/dds_activity_game_vole_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/game_activity_cave_bottom_margin1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <include
                    layout="@layout/dds_activity_game_vole_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/game_activity_cave_bottom_margin2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <include
                    layout="@layout/dds_activity_game_vole_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/game_activity_cave_bottom_margin1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <include
                    layout="@layout/dds_activity_game_vole_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/game_activity_cave_bottom_margin2" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/progress"
            android:layout_width="@dimen/game_activity_progress_width"
            android:layout_height="@dimen/game_activity_button_size"
            android:background="@drawable/dds_game_progress_background"
            android:gravity="center"
            android:text="11/10"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/closeVoice"
            android:layout_width="@dimen/game_activity_button_size"
            android:layout_height="@dimen/game_activity_button_size"
            android:layout_marginTop="20dp"
            android:background="@drawable/dds_game_close_background_voice"
            android:button="@null"
            android:text="@null" />

        <ImageView
            android:id="@+id/playVoice"
            android:layout_width="@dimen/game_activity_button_size"
            android:layout_height="@dimen/game_activity_button_size"
            android:layout_marginTop="20dp"
            android:src="@drawable/dds_game_play_voice" />
    </LinearLayout>
