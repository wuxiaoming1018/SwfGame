<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zjmmc_game_over_root"
    android:gravity="center">

    <ImageView
        android:id="@+id/sunShine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/zjmmc_game_over_image" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/zjmmc_game_over_bg" />

    <RelativeLayout
        android:id="@+id/listLayout"
        android:layout_width="540dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"></ListView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/zjmmc_correct_wrang" />

        <ImageView
            android:id="@+id/playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:adjustViewBounds="true"
            android:src="@drawable/zjmmc_play_again" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_margin="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/zjmmc_help_close" />
</RelativeLayout>
