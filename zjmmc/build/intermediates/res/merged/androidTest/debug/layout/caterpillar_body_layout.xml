<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/caterpillarLayout"
    android:layout_width="@dimen/caterpillar_tail_width"
    android:layout_height="@dimen/caterpillar_tail_height"
    android:background="@drawable/caterpillar_body_1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/letterText"
        android:layout_width="@dimen/caterpillar_tail_width"
        android:layout_height="@dimen/caterpillar_tail_width"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#213E02"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>
