            android:layout_height="@dimen/game_activity_button_size"
            android:background="@drawable/zjmmc_game_time_background"
            android:gravity="center"
            android:text="11"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/progress"
            android:layout_width="@dimen/game_activity_progress_width"
            android:layout_height="@dimen/game_activity_button_size"
            android:layout_marginLeft="14dp"
            android:background="@drawable/zjmmc_game_progress_background"
            android:gravity="center"
            android:text="11/10"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/chiness"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/game_activity_button_size"
            android:layout_marginLeft="14dp"
            android:background="@drawable/zjmmc_game_chiness_background"
            android:gravity="center"
            android:maxLines="1"
            android:maxWidth="360dp"
            android:paddingLeft="40dp"
            android:singleLine="true"
            android:text=""
            android:textSize="23sp" />

        <CheckBox
            android:id="@+id/closeVoice"
            android:layout_width="@dimen/game_activity_button_size"
            android:layout_height="@dimen/game_activity_button_size"
            android:layout_marginLeft="20dp"
            android:button="@drawable/zjmmc_game_close_background_voice"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="" />
    </LinearLayout>

