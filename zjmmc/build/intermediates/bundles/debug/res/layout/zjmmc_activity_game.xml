        android:id="@+id/caterpillarLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/caterpillar_layout_height"
        android:layout_gravity="right"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom|right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/caterpillar_tail_width"
            android:layout_height="@dimen/caterpillar_tail_height"
            android:background="@drawable/caterpillar_tail" />

        <ImageView
            android:layout_width="@dimen/caterpillar_head_width"
            android:layout_height="@dimen/caterpillar_head_height"
            android:layout_marginBottom="@dimen/caterpillar_head_bottom_margin"
            android:layout_marginLeft="-9dp"
            android:background="@drawable/caterpillar_head" />
